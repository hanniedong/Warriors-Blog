<!DOCTYPE html>
<html>
  <head>
    <title>Warriorsblog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul class="nav nav-pills align-right">
        <% if logged_in? %>
          <li role="presentation"> <%= link_to "Home", articles_path %> </li>
          <li role="presentation"><%= link_to 'Images', images_path %> </li>
          <li role="presentation"><%= link_to "Logout", logout_path %></li>
      <% elsif session[:user_id] == nil %>
        <li role="presentation"><%= link_to "Login", login_path %> </li>
        <li role="presentation"><%= link_to "Register", register_path %></li>
      <% end %>
    </ul>
    <%= yield %>
  </body>
</html>
