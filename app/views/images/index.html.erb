<div class = "container">

  <div class = "page-header">
    <h1>Images</h1>
  </div>
  <p id="notice"><%= notice %></p>

  <div class="row">
    <% @images.each do |image| %>
       <div class="col-md-4">
           <div class="thumbnail">
             <img class="img-responsive" > <%= image_tag(image.image_url(:thumb).to_s) %> </img>
          </div>
              <%= link_to 'View', image %> | 
              <%= link_to 'Delete', image, method: :delete, data: { confirm: 'Are you sure?' } %> <br>
      </div>
    <% end %>
  </div>

  <br>

  <%= link_to 'Upload image', new_image_path %>
</div>