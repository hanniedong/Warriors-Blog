<div class= "container-fluid">
  
  <h2> Login </h2>


  <%= form_for(:sessions, url: login_path) do |f| %>

  <% if @errors && @errors.any? %>
    <ul>
      <% @errors.each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

    <div>
      <%= f.text_field :email, placeholder: 'Email'%>
    </div>

    <div>
      <%= f.password_field :password, placeholder: 'Password' %>
    </div>

    <%= f.submit 'Login'%>
  <% end %>
</div>